<% layout("/layouts/boilerplates") %>
<style>
  .show-card {
    width: 100%;
    max-width: 600px;
    margin: auto;
  }

  .btn {
    padding: 0.5rem 2.5rem;
    font-size: 1rem;
  }

  .btns {
    display: flex;
    justify-content: center;
    gap: 15px;
    flex-wrap: nowrap;
    margin-bottom: 20px;
  }

  .maphead {
    text-align: center;
  }

  #map {
    width: 100%;
    height: 400px;
    margin: auto;
  }

  .help {
    width: 100%;
  }

  .listing-card img {
    width: 100%;
    object-fit: cover;
  }

  /* Small screen */
  @media (max-width: 768px) {
    .show-card {
      width: 90%;
    }

    .btns .btn {
      flex: 1 1 auto;  
      max-width: 200px; 
    }

    .card.col-5 {
      width: 100%;
      margin-bottom: 15px;
    }

    .row {
      margin-left: 0;
      margin-right: 0;
    }

    #map {
      height: 300px;
    }
  }

  @media (max-width: 480px) {
    h3, h4 {
      font-size: 1.2rem;
    }

    .card-body p, .card-body h5 {
      font-size: 0.9rem;
    }

    textarea.form-control {
      width: 100%;
    }
  }
</style>

<script>
     const mapToken = "<%=process.env.MAP_TILER_KEY%>";
     const listing = <%-JSON.stringify(listing)%>;
</script>

<div class="row mt-3 justify-content-center">
  <!-- Listing Title -->
  <div class="col-12 text-center mb-3">
    <h3><%= listing.title %></h3>
  </div>

  <!-- Listing Card -->
  <div class="card show-card listing-card mb-3">
    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
      <p class="card-text"><i>Owned by: <b><%= listing.owner.username %></b></i></p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN") %>/night</p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>
    </div>
  </div>
  <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark">Delete</button>
    </form>
  </div>

  <hr />
  <div class="help mb-3 col-10 col-md-8">
    <% if(currUser) { %>
      <h4>Leave a Review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3 mt-3">
          <label for="comment" class="form-control">Comments</label>
          <textarea class="form-control" id="comment" name="review[comment]" cols="38" rows="5" required></textarea>
          <div class="invalid-feedback">Please add some Comments for review</div>
        </div>

        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <hr/>
    <% } %>

    <!-- All Reviews -->
    <% if(listing.reviews.length > 0) { %>
      <h4>All Reviews</h4>
      <div class="row">
        <% for(review of listing.reviews) { %>
          <div class="card col-12 col-md-5 me-3 mb-3">
            <div class="card-body">
              <h5 class="card-title">@<b><%= review.author.username %></b></h5>
              <p class="starability-result card-text" data-rating=<%= review.rating %>></p>
              <p class="card-text"><%= review.comment %></p>
            </div>
            <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%=review._id %>?_method=DELETE">
              <button class="btn btn-dark">Delete</button>
            </form>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>

  <!-- Map Section -->
  <div class="col-12 col-md-8 text-center mb-3">
    <h3 class="maphead">Where You Will Be</h3>
    <div id="map" class="mb-3"></div>
  </div>
</div>

<script src="/js/map.js"></script>
